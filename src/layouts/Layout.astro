---
import Navbar from '../components/Navbar/Navbar.astro'
import Aside from '../components/Aside/Aside.astro';
import '@fontsource/parisienne';
import '@fontsource/lato/100.css';
import '@fontsource/lato/300.css';
import '@fontsource/lato/400.css';
import '@fontsource/lato/700.css';
import '@fontsource/lato/900.css';

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='DeCocco web portfolio' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <link rel='icon' type='image/jpeg' href='/assets/myself.jpeg' />
    <script src="https://kit.fontawesome.com/b8ee90d27a.js" crossorigin="anonymous" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <Navbar />
    </header>
    <aside>
      <Aside />
    </aside>
    <main>
      <slot />
    </main>
  </body>
</html>
<style is:global>
  * {
    box-sizing: border-box !important;
  }
  html {
    background: var(--colors-primary);
    font-family: 'Lato', sans-serif;
    --colors-black: #000000;
    --colors-gray1: #444444;
    --colors-primary: #c7d0e0;
    --colors-red: #E1306C;
    --colors-skyblue:#0177B5;
    --colors-white: #ffffff;
  }
  body {
    display: grid;
    grid-template-areas:
      "head head"
      "side content";
    grid-template-columns: 120px 1fr;
    grid-template-rows: 120px 1fr;
    height: 100vh;
    margin: 0;

    @media (width < 768px) {
      grid-template-columns: 1fr;
      grid-template-rows: 80px 1fr 80px;
      grid-template-areas:
        "head"
        "content"
        "side";
    }
  }
  header {
    grid-area: head;
    padding-left: 16px;
    padding-right: 32px;
    @media (width < 768px) {
      padding-inline: 0px;
    }
  }
  aside {
    grid-area: side;
  }
  main {
    grid-area: content;
    border-top: 2px solid var(--colors-white);
    border-left: 2px solid var(--colors-white);
    border-top-left-radius: 12px;
    @media (width < 768px) {
      border-bottom: 2px solid var(--colors-white);
      border-left: unset;
      border-top-left-radius: unset;
      margin-inline: 20px;
    }
  }
</style>
